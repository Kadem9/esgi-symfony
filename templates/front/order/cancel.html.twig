{% extends "base.html.twig" %}

{% block body %}
    <div class="flex items-center justify-between">
        <h1 class="h1 text-yellow-500">Paiement annulé</h1>
    </div>
    <div class="card-body">
        <p>Vous avez annulé le paiement pour l'événement suivant :</p>
        <ul>
            <li><strong>Événement :</strong> {{ event.name }}</li>
            <li><strong>Date :</strong> {{ event.date|date('d/m/Y') }}</li>
        </ul>
        <div class="mt-4">
            <a href="{{ path('app_event_show', {'id': event.id}) }}" class="btn btn-primary">Réessayer</a>
            <a href="{{ path('app_event_home') }}" class="btn btn-secondary">Retour aux événements</a>
        </div>
    </div>
{% endblock %}
